<% include ../partials/header.ejs %>
<!-- Content  for the add page -->
<div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1><%=title %></h1>
  
        <form class="form" method="post">
          <div class="from-group">
            <label for="nameTextField">Carname Name</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter the Carname... "
              name="carname"
              required
            />
          </div>

          <div class="from-group">
            <label for="nameTextField">Category</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter the Category... "
              name="category"
              required
            />
          </div>

          <div class="from-group">
            <label for="nameTextField">Carmodel</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter the Car model... "
              name="carmodel"
              required
            />
          </div>

          <div class="from-group">
            <label for="nameTextField">Price</label>
            <input
              type="number"
              class="form-control"
              id="nameTextField"
              placeholder="Enter the Price... "
              name="price"
              required
            />
          </div>
  
         
  
  
  
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i>Submit
          </button>
  
          <a href="/cars" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel
          </a>
        </form>
      </div>
    </div>
  </div>
  <% include ../partials/footer.ejs %>